{
  "manifest_version": 3,
  "name": "Loggd",
  "version": "1.2.0",
  "description": "Search for movies on various websites (Letterboxd, IMDb, TMDB, Rotten Tomatoes, and Metacritic).",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icon.png", "popup.html", "popup.js", "popup.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
